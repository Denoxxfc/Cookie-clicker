    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
        let gameState = {
            cookies: 0,
            cookiesPerClick: 1,
            upgrades: {
                1: { level: 0, cost: 100, multiplier: 1, name: "–£—Å–∏–ª–µ–Ω–Ω—ã–π –∫–ª–∏–∫" },
                2: { level: 0, cost: 500, multiplier: 0, name: "–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä" },
                3: { level: 0, cost: 5000, multiplier: 1, name: "–£–¥–≤–æ–∏—Ç–µ–ª—å" },
                4: { level: 0, cost: 25000, multiplier: 0, name: "–ó–æ–ª–æ—Ç–æ–µ –ø–µ—á–µ–Ω—å–µ" },
                5: { level: 0, cost: 1000000, multiplier: 100, name: "–ë–µ—Å–∫–æ–Ω–µ—á–Ω—ã–π –∫–ª–∏–∫–µ—Ä" }
            },
            totalClicks: 0,
            secretUnlocked: false,
            achievements: []
        };

        const GOAL = 1000000000;
        let autoclickerInterval = null;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram Web App
        let tg = window.Telegram?.WebApp;

        if (tg) {
            tg.expand();
            tg.ready();
            tg.MainButton.setText("–°–æ—Ö—Ä–∞–Ω–∏—Ç—å –∏–≥—Ä—É");
            tg.MainButton.onClick(saveGame);
            tg.MainButton.show();
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –∏–≥—Ä—ã
        function loadGame() {
            const saved = localStorage.getItem('cookieClickerSave');
            if (saved) {
                gameState = JSON.parse(saved);
                updateDisplay();
                
                // –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –∞–≤—Ç–æ–∫–ª–∏–∫–µ—Ä–∞
                if (gameState.upgrades[2].level > 0) {
                    startAutoclicker();
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è —Ü–µ–ª–∏
                checkGoal();
            }
        }

        // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∏–≥—Ä—ã
        function saveGame() {
            localStorage.setItem('cookieClickerSave', JSON.stringify(gameState));
            showAchievement("–ò–≥—Ä–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞!");
            
            if (tg) {
                tg.sendData(JSON.stringify(gameState));
                tg.close();
            }
        }

        // –ö–ª–∏–∫ –ø–æ –ø–µ—á–µ–Ω—å–∫–µ
        document.getElementById('cookieBtn').addEventListener('click', () => {
            let cookiesEarned = gameState.cookiesPerClick;
            
            // –®–∞–Ω—Å –Ω–∞ –∑–æ–ª–æ—Ç–æ–µ –ø–µ—á–µ–Ω—å–µ
            if (gameState.upgrades[4].level > 0 && Math.random() < 0.1) {
                cookiesEarned *= 10;
                showAchievement("–ó–æ–ª–æ—Ç–æ–µ –ø–µ—á–µ–Ω—å–µ! x10!");
            }
            
            gameState.cookies += cookiesEarned;
            gameState.totalClicks++;
            
            // –ê–Ω–∏–º–∞—Ü–∏—è –∫–ª–∏–∫–∞
            const btn = document.getElementById('cookieBtn');
            btn.style.transform = 'scale(0.95)';
            setTimeout(() => {
                btn.style.transform = 'scale(1)';
            }, 100);
            
            // –°–æ–∑–¥–∞–Ω–∏–µ –ª–µ—Ç–∞—é—â–µ–≥–æ —á–∏—Å–ª–∞
            createFloatingNumber(cookiesEarned);
            
            updateDisplay();
            checkGoal();
            
            // –°–ª—É—á–∞–π–Ω—ã–µ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è
            if (gameState.totalClicks === 100 && !gameState.achievements.includes("100 –∫–ª–∏–∫–æ–≤")) {
                gameState.achievements.push("100 –∫–ª–∏–∫–æ–≤");
                showAchievement("100 –∫–ª–∏–∫–æ–≤!");
            }
        });

        // –ü–æ–∫—É–ø–∫–∞ —É–ª—É—á—à–µ–Ω–∏—è
        function buyUpgrade(upgradeId) {
            const upgrade = gameState.upgrades[upgradeId];
            
            if (gameState.cookies >= upgrade.cost) {
                gameState.cookies -= upgrade.cost;
                upgrade.level++;
                
                // –£–≤–µ–ª–∏—á–µ–Ω–∏–µ —Å—Ç–æ–∏–º–æ—Å—Ç–∏
                upgrade.cost = Math.floor(upgrade.cost * (upgradeId === 5 ? 10 : 1.5));
                
                // –ü—Ä–∏–º–µ–Ω–µ–Ω–∏–µ —ç—Ñ—Ñ–µ–∫—Ç–æ–≤ —É–ª—É—á—à–µ–Ω–∏—è
                switch(upgradeId) {
                    case 1:
                        gameState.cookiesPerClick += upgrade.multiplier;
                        break;
                    case 2:
                        if (upgrade.level === 1) {
                            startAutoclicker();
                            showAchievement("–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω!");
                        }
                        break;
                    case 3:
                        // –£–¥–≤–æ–µ–Ω–∏–µ –≤—Å–µ—Ö —É–ª—É—á—à–µ–Ω–∏–π
                        gameState.cookiesPerClick *= 2;
                        if (autoclickerInterval) {
                            clearInterval(autoclickerInterval);
                            startAutoclicker();
                        }
                        break;
                    case 5:
                        gameState.cookiesPerClick *= upgrade.multiplier;
                        showAchievement("–ë–ï–°–ö–û–ù–ï–ß–ù–ê–Ø –°–ò–õ–ê!");
                        break;
                }
                
                updateDisplay();
                showAchievement(`${upgrade.name} —É–ª—É—á—à–µ–Ω–æ –¥–æ —É—Ä–æ–≤–Ω—è ${upgrade.level}!`);
            }
        }

        // –ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä
        function startAutoclicker() {
            if (autoclickerInterval) clearInterval(autoclickerInterval);
            
            autoclickerInterval = setInterval(() => {
                const autoclickerPower = gameState.upgrades[2].level * (gameState.upgrades[3].level > 0 ? Math.pow(2, gameState.upgrades[3].level) : 1);
                gameState.cookies += autoclickerPower;
                updateDisplay();
                checkGoal();
                
                // –ü–æ–∫–∞–∑ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
                const notice = document.getElementById('autoclickerNotice');
                notice.textContent = `–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä: +${autoclickerPower} –ø–µ—á–µ–Ω–µ–∫`;
                notice.style.opacity = 1;
                setTimeout(() => {
                    notice.style.opacity = 0;
                }, 1000);
            }, 10000); // –ö–∞–∂–¥—ã–µ 10 —Å–µ–∫—É–Ω–¥
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ü–µ–ª–∏
        function checkGoal() {
            if (gameState.cookies >= GOAL && !gameState.secretUnlocked) {
                gameState.secretUnlocked = true;
                revealSecret();
            }
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–µ—Å—Å-–±–∞—Ä–∞
            const progress = Math.min((gameState.cookies / GOAL) * 100, 100);
            document.getElementById('progressBar').style.width = `${progress}%`;
            
            // –°–µ–∫—Ä–µ—Ç–Ω–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –ø—Ä–∏ –ø—Ä–∏–±–ª–∏–∂–µ–Ω–∏–∏
            if (gameState.cookies > GOAL * 0.9 && gameState.cookies < GOAL) {
                document.getElementById('secretNotification').style.display = 'block';
            }
        }

        // –†–∞—Å–∫—Ä—ã—Ç–∏–µ —Å–µ–∫—Ä–µ—Ç–∞
        function revealSecret() {
            document.getElementById('secretRevealed').style.display = 'flex';
            
            // –°–ø–µ—Ü–∏–∞–ª—å–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
            const messages = [
                "–¢—ã –¥–æ—Å—Ç–∏–≥ –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ–≥–æ! –¢–µ–ø–µ—Ä—å —Ç—ã ‚Äî –õ–µ–≥–µ–Ω–¥–∞ –ü–µ—á–µ–Ω–µ–∫!",
                "1 –º–∏–ª–ª–∏–∞—Ä–¥ –ø–µ—á–µ–Ω–µ–∫! –í—Å–µ–ª–µ–Ω–Ω–∞—è –Ω–∞–ø–æ–ª–Ω–µ–Ω–∞ —Ç–≤–æ–∏–º –≤–µ–ª–∏—á–∏–µ–º!",
                "–ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –¢—ã –≤—ã–∏–≥—Ä–∞–ª –≤–µ—á–Ω—É—é —Å–ª–∞–≤—É –≤ –º–∏—Ä–µ –∫–ª–∏–∫–µ—Ä–æ–≤!",
                "–≠—Ç–æ –±—ã–ª–æ —ç–ø–∏—á–µ—Å–∫–æ–µ –ø—É—Ç–µ—à–µ—Å—Ç–≤–∏–µ! –ù–∞—Å–ª–∞–∂–¥–∞–π—Å—è –º–æ–º–µ–Ω—Ç–æ–º!",
                "–¢—ã –¥–æ–∫–∞–∑–∞–ª, —á—Ç–æ —É–ø–æ—Ä—Å—Ç–≤–æ –ø–æ–±–µ–∂–¥–∞–µ—Ç –≤—Å–µ! –¢—ã ‚Äî —á–µ–º–ø–∏–æ–Ω!"
            ];
            
            const randomMessage = messages[Math.floor(Math.random() * messages.length)];
            document.getElementById('secretMessage').innerHTML += `<br><br><strong>${randomMessage}</strong>`;
            
            // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è
            if (!gameState.achievements.includes("1 –º–∏–ª–ª–∏–∞—Ä–¥")) {
                gameState.achievements.push("1 –º–∏–ª–ª–∏–∞—Ä–¥");
                saveGame();
            }
        }

        // –ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å –∏–≥—Ä—É –ø–æ—Å–ª–µ —Å–µ–∫—Ä–µ—Ç–∞
        function continueGame() {
            document.getElementById('secretRevealed').style.display = 'none';
            showAchievement("–°–µ–∫—Ä–µ—Ç —Ä–∞—Å–∫—Ä—ã—Ç! –ò–≥—Ä–∞ –ø—Ä–æ–¥–æ–ª–∂–∞–µ—Ç—Å—è...");
        }

        // –°–æ–∑–¥–∞–Ω–∏–µ –ª–µ—Ç–∞—é—â–µ–≥–æ —á–∏—Å–ª–∞
        function createFloatingNumber(value) {
            const number = document.createElement('div');
            number.textContent = `+${value}`;
            number.style.cssText = `
                position: fixed;
                color: #FFD700;
                font-weight: bold;
                font-size: 24px;
                pointer-events: none;
                z-index: 1000;
                animation: floatUp 1s forwards;
                text-shadow: 0 0 5px black;
            `;
            
            // –ü–æ–∑–∏—Ü–∏—è –≤–æ–∑–ª–µ –ø–µ—á–µ–Ω—å–∫–∏
            const btn = document.getElementById('cookieBtn');
            const rect = btn.getBoundingClientRect();
            number.style.left = `${rect.left + rect.width/2}px`;
            number.style.top = `${rect.top}px`;
            
            document.body.appendChild(number);
            
            setTimeout(() => {
                number.remove();
            }, 1000);
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–µ
        function showAchievement(text) {
            const achievement = document.getElementById('achievement');
            achievement.textContent = `üèÜ ${text}`;
            achievement.style.display = 'block';
            
            setTimeout(() => {
                achievement.style.display = 'none';
            }, 3000);
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–∏—Å–ø–ª–µ—è
        function updateDisplay() {
            // –ü–µ—á–µ–Ω—å–∫–∏
            document.getElementById('cookiesCount').textContent = 
                formatNumber(gameState.cookies);
            document.getElementById('cookiesPerClick').textContent = 
                `–ü–µ—á–µ–Ω–µ–∫ –∑–∞ –∫–ª–∏–∫: ${formatNumber(gameState.cookiesPerClick)}`;
            
            // –£–ª—É—á—à–µ–Ω–∏—è
            for (let i = 1; i <= 5; i++) {
                const upgrade = gameState.upgrades[i];
                document.getElementById(`upgrade${i}Level`).textContent = upgrade.level;
                document.getElementById(`upgrade${i}Cost`).textContent = formatNumber(upgrade.cost);
                
                // –ë–ª–æ–∫–∏—Ä–æ–≤–∫–∞ –∫–Ω–æ–ø–∫–∏, –µ—Å–ª–∏ –Ω–µ —Ö–≤–∞—Ç–∞–µ—Ç –¥–µ–Ω–µ–≥
                const btn = document.querySelector(`button[onclick="buyUpgrade(${i})"]`);
                btn.disabled = gameState.cookies < upgrade.cost;
                
                // –ü–æ–¥—Å–≤–µ—Ç–∫–∞ –∫—É–ø–ª–µ–Ω–Ω—ã—Ö
                const upgradeEl = document.getElementById(`upgrade${i}`);
                if (upgrade.level > 0) {
                    upgradeEl.classList.add('purchased');
                } else {
                    upgradeEl.classList.remove('purchased');
                }
                
                // –ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–π —É—Ä–æ–≤–µ–Ω—å
                const maxLevels = {1: 100, 2: 20, 3: 10, 4: 5, 5: 1};
                if (upgrade.level >= maxLevels[i]) {
                    btn.textContent = "–ú–ê–ö–°";
                    btn.disabled = true;
                }
            }
            
            // –¢–µ–∫—Å—Ç —Ü–µ–ª–∏
            document.getElementById('goalText').innerHTML = 
                `–¶–µ–ª—å: <strong>${formatNumber(GOAL)}</strong> –ø–µ—á–µ–Ω–µ–∫!<br>
                 –û—Å—Ç–∞–ª–æ—Å—å: <span style="color:#FFD700">${formatNumber(GOAL - gameState.cookies)}</span>`;
        }

        // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —á–∏—Å–µ–ª
        function formatNumber(num) {
            if (num >= 1000000000) {
                return (num / 1000000000).toFixed(2) + ' –º–ª—Ä–¥';
            }
            if (num >= 1000000) {
                return (num / 1000000).toFixed(2) + ' –º–ª–Ω';
            }
            if (num >= 1000) {
                return (num / 1000).toFixed(1) + ' —Ç—ã—Å';
            }
            return Math.floor(num).toString();
        }

        // –ê–Ω–∏–º–∞—Ü–∏–∏ CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes floatUp {
                0% { transform: translateY(0); opacity: 1; }
                100% { transform: translateY(-100px); opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        // –ê–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∫–∞–∂–¥—ã–µ 30 —Å–µ–∫—É–Ω–¥
        setInterval(saveGame, 30000);

        // –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã
        window.addEventListener('load', () => {
            loadGame();
            updateDisplay();
            
            // –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ
            setTimeout(() => {
                showAchievement("–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –ü–µ—á–µ–Ω—å–∫–æ–ö–ª–∏–∫–µ—Ä!");
            }, 1000);
        });

        // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –ø—Ä–∏ –∑–∞–∫—Ä—ã—Ç–∏–∏
        window.addEventListener('beforeunload', saveGame);
    </script>
</body>
</html>
